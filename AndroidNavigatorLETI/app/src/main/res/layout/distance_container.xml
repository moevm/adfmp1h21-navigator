<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_white"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/point_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_location"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/point_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.03"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@+id/point_image"
        app:layout_constraintTop_toTopOf="@+id/point_image"
        app:layout_constraintBottom_toBottomOf="@+id/point_image"
        android:textSize="@dimen/default_corner_radius"
        tools:text="1000 m" />

    <View
        android:id="@+id/delimit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/point_image"
        app:layout_constraintLeft_toLeftOf="@+id/point_image"
        app:layout_constraintRight_toRightOf="@+id/point_distance"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/traffic_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/delimit"
        app:layout_constraintLeft_toLeftOf="@+id/point_image"
        app:layout_constraintRight_toRightOf="@+id/point_image"
        app:srcCompat="@drawable/ic_location" />

    <TextView
        android:id="@+id/traffic_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.03"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@+id/traffic_image"
        app:layout_constraintTop_toTopOf="@+id/traffic_image"
        app:layout_constraintBottom_toBottomOf="@+id/traffic_image"
        android:textSize="@dimen/default_corner_radius"
        tools:text="2000 m" />

</androidx.constraintlayout.widget.ConstraintLayout>